<Window x:Class="FileTransferClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileTransferClient"
        mc:Ignorable="d"
        Title="File Transfer Client" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Server IP Address:"/>
            <TextBox Name="ServerIpTextBox" Text="127.0.0.1" Margin="0,0,0,10"/>
            <Button Name="SelectFileButton" Content="Select File" Click="SelectFileButton_Click" Width="100"/>
            <TextBlock Name="StatusTextBlock" FontSize="14" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
