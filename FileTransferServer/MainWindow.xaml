<Window x:Class="FileTransferServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileTransferServer"
        mc:Ignorable="d"
        Title="File Transfer Server" Height="200" Width="450">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Save Received Files To:" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="SaveLocationTextBox" Width="300" IsReadOnly="True"/>
                <Button Name="BrowseButton" Content="Browse..." Click="BrowseButton_Click" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBlock Name="StatusTextBlock" FontSize="14" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
